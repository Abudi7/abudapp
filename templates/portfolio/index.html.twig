{% extends 'base.html.twig' %}
{% block title %}Portfolio index
{% endblock %}
{% block body %}
<link
   href="{{asset('css/main.css')}}" rel="stylesheet">
<!-- start banner Area -->
<section class="about-banner paralax-mf bg-image" style="background-image: url(../img/blog1.jpg); ">
   <div class="overlay-itro"></div>
   <div class="container">
      <div class="row d-flex align-items-center justify-content-center">
         <div class="about-content col-lg-12">
            <h1 class="text-white">
               Portfolio
            </h1>
            <p class="text-white link-nav">
               <a href="{{ path('app_home') }}">Home
               </a>
               <span class="lnr lnr-arrow-right"></span>
               <a href="{{ path('app_portfolio_index') }}">
               Portfolio</a>
            </p>
         </div>
      </div>
   </div>
</section>
<!-- End banner Area -->
<!-- Start portfolio-area Area -->
<section class="portfolio-area section-gap" id="portfolio">
   <div class="container">
      <div class="row d-flex justify-content-center">
         <div class="menu-content pb-70 col-lg-8">
            <div class="title text-center">
               <h1 class="mb-10">Our Latest Featured Projects</h1>
               <p>Who are in extremely love with eco friendly system.</p>
            </div>
         </div>
      </div>
      <div class="filters">
         <ul>
            <li class="active" data-filter="*">All</li>
            <li data-filter=".Web">Web Application</li>
            <li data-filter=".Graphic Design">Graphic Design</li>
            <li data-filter=".Video Editing">Video Editing</li>
            {# <li data-filter=".printing">Printing</li> #}
         </ul>
      </div> 
      <div class="filters-content">
         <div class="row grid">
            {% for portfolio in portfolios %}
            <div class="single-portfolio col-sm-4 all">
               <div class="relative">
                  <div class="thumb">
                     <div class="overlay overlay-bg"></div>
                     <img class="image img-fluid" src="{{asset('portfolioImage/' ~ portfolio.image) }}" alt="">
                  </div>
                  <a href="{{asset('portfolioImage/' ~ portfolio.image) }}" class="img-pop-up">
                     <div class="middle">
                        <div class="text align-self-center d-flex"><img src="../img/preview.png" alt="">
                        </div>
                     </div>
                  </a>
               </div>
               <div class="p-inner">
                  <h4>{{ portfolio.title }}</h4>
                  <div class="cat">{{ portfolio.description |slice(0, 39) }}
                     <a href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}" class="link-danger">Read More</a>
                  </div>
               </div>
            </div>
            {% else %}
            <tr>
               <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
           
         </div>
		 {% if is_granted('IS_AUTHENTICATED_FULLY') %}
		  <a href="{{ path('app_portfolio_new') }}" class="btn btn-outline-danger btn-md">Create new</a>
		  {% endif %}
      </div>
   </div>
   </div></div></div></div>
</section>
<!-- End portfolio-area Area -->
{% endblock %}