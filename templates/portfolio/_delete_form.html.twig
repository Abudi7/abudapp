<form method="post" action="{{ path('app_portfolio_delete', {'id': portfolio.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ portfolio.id) }}">
    <button class="btn float-right btn-sm pl-2">Delete</button>
     <a href="{{ path('app_portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-outline-primary btn-sm mr-3 mb-3 float-right">Edit</a>
</form>
