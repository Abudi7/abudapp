{% extends 'base.html.twig' %}

{% block body %}
<link href="{{asset('css/main.css')}}" rel="stylesheet">
    <!-- start banner Area -->
    <section class="relative about-banner paralax-mf bg-image" style="background-image: url(../img/contact.jpeg)">
        <div class="overlay-itro"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Contact Us
                    </h1>
                    <p class="text-white link-nav"><a href="{{path('app_home') }}">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="{{path('app_mail') }}"> Contact Us</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                    {% for message in app.flashes('messege') %}
                            <div class="p-3 m-4 bg-success text-white">
                            {% autoescape %}
                                <p class="lead m-2"> {{message |striptags('</br>')}} </p>
                            {% endautoescape %}    
                            </div>                   
                    {% endfor %}        
            </div>
        </div>
    </div>
    <!-- Start contact-page Area -->
    <section class="contact-page-area section-gap">
        <div class="container">
            <div class="row">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5466.872488790548!2d15.501513!3d46.756297!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDbCsDQ1JzIyLjciTiAxNcKwMzAnMDUuNSJF!5e0!3m2!1sar!2siq!4v1587848736940!5m2!1sar!2siq" frameborder="0"
                    allowfullscreen="" aria-hidden="false" tabindex="0" width="100%" height="455px "></iframe>
                <div class="col-lg-4 d-flex flex-column address-wrap">
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-home"></span>
                        </div>
                        <div class="contact-details">
                            <h5>Quellenweg 3 , 8451 Heimschuh</h5>

                        </div>
                    </div>
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-phone-handset"></span>
                        </div>
                        <div class="contact-details">
                            <h5> +43 6648759370</h5>

                        </div>
                    </div>
                    <div class="single-contact-address d-flex flex-row">
                        <div class="icon">
                            <span class="lnr lnr-envelope"></span>
                        </div>
                        <div class="contact-details">
                            <h5>info@abdulrhman-alshalal.com</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    {{ form(emailForm) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
